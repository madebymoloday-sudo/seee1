# ============================================
# База данных (PostgreSQL)
# ============================================
POSTGRES_USER=seee_user
POSTGRES_PASSWORD=seee_password
POSTGRES_DB=seee_db
POSTGRES_PORT=5432

# URL подключения к базе данных (опционально, формируется автоматически)
# DATABASE_URL=postgresql://seee_user:seee_password@postgres:5432/seee_db

# ============================================
# Backend (NestJS)
# ============================================
# JWT токены
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# URL фронтенда для CORS
FRONTEND_URL=http://localhost:5171

# Порт бэкенда
BACKEND_PORT=3000

# Режим работы (development/production)
NODE_ENV=development

# ============================================
# OpenAI (для AI-психолога)
# ============================================
OPENAI_API_KEY=your-openai-api-key

# ============================================
# Lava (платежная система)
# ============================================
LAVA_API_KEY=your-lava-api-key
LAVA_API_URL=https://gate.lava.top
# LAVA_API_BASE_URL=https://gate.lava.top
# LAVA_SHOP_ID=your-shop-id
# LAVA_WEBHOOK_URL=https://your-domain.com/api/v1/subscription/webhook/lava
# LAVA_OFFER_ID=your-offer-id
# LAVA_OFFER_ID_MONTHLY=your-monthly-offer-id
# LAVA_OFFER_ID_QUARTERLY=your-quarterly-offer-id
# LAVA_OFFER_ID_YEARLY=your-yearly-offer-id

# ============================================
# Frontend (Vite/React)
# ============================================
# Порт фронтенда
FRONTEND_PORT=5171

# URL API для фронтенда (опционально, по умолчанию используется относительный путь через proxy)
# VITE_API_URL=http://localhost:3000/api/v1

# URL WebSocket для фронтенда
VITE_SOCKET_URL=http://localhost:3000

# Target для Vite proxy (для работы в Docker)
VITE_PROXY_TARGET=http://backend:3000

# Telegram Bot ID для авторизации через Telegram
VITE_TELEGRAM_BOT_ID=your-telegram-bot-id

# ============================================
# Production (для docker-compose.yml)
# ============================================
# URL бэкенда для фронтенда в production
# API_URL=http://backend:3000
